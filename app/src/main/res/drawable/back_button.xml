<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#000000"
                android:endColor="#000000"/>
        </shape>
    </item>


    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval" >
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#8c3ee0"
                android:endColor="#e03e91"/>
        </shape>
    </item>

</layer-list>